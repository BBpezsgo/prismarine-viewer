{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "allowImportingTsExtensions": true,
        "checkJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "public/textures",
        "public/blocksStates",
        "viewer/lib/entity/entities.json",
        "public/index.js",
        "public/worker.js"
    ]
}